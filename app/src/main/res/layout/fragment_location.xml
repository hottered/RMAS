<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A2ACFF"
        tools:context=".LocationFragment">


        <View
            android:id="@+id/view2"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/common_specie_location"
            app:layout_constraintEnd_toStartOf="@+id/rating_location_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/common_specie_location"
            app:layout_constraintTop_toTopOf="@+id/common_specie_location" />

        <ImageView
            android:id="@+id/image_location_view"
            android:layout_width="0dp"
            android:layout_height="380dp"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_location_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/image_location_view"
            app:layout_constraintTop_toBottomOf="@+id/image_location_view" />

        <kr.co.prnd.readmore.ReadMoreTextView
            android:id="@+id/description_location_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4sp"
            android:text="Description"
            android:textColor="#370340"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/rating_location_view"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:readMoreColor="#673AB7"
            app:readMoreMaxLine="8"
            app:readMoreText="...Read more" />

        <TextView
            android:id="@+id/rating_location_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <RatingBar
            android:id="@+id/ratingBar_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:progressBackgroundTint="#E6E6E6"
            android:stepSize="1"
            android:rating="1"
            android:progressTint="#FFA014"
            app:layout_constraintEnd_toEndOf="@+id/description_location_view"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <Button
            android:id="@+id/button_submit_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#3F51B5"
            android:text="Submit"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ratingBar_adapter"
            app:layout_constraintStart_toStartOf="@+id/ratingBar_adapter"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar_adapter" />

        <TextView
            android:id="@+id/date_of_creation_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="DateCreated"
            android:textColor="#370340"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <View
            android:id="@+id/view"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/date_of_creation_location"
            app:layout_constraintEnd_toStartOf="@+id/common_specie_location"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/date_of_creation_location"
            app:layout_constraintTop_toTopOf="@+id/date_of_creation_location" />

        <TextView
            android:id="@+id/common_specie_location"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Most common specie:"
            android:textColor="#370340"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Date created:"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/date_of_creation_location"
            app:layout_constraintTop_toBottomOf="@+id/title_location_view" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specie"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/common_specie_location"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/rating_location_view"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Description"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/date_of_creation_location"
            app:layout_constraintTop_toBottomOf="@+id/common_specie_location" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Rate this location?"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/description_location_view"
            app:layout_constraintTop_toBottomOf="@+id/description_location_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>